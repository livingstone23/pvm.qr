<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.Maui"
             x:Class="PVM.Mobile.Pages.GenerateBarCode"
             Title="GenerateBarCodeModel">
    <VerticalStackLayout Margin="5">

        <Label 
            Text="Ingreses texto"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
        />

        <Entry 
            x:Name="entryText" Text="{Binding textValue}"
    
        />
        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="Center"
            Spacing="5">

            <Button Text="Regresar" x:Name="btnRegresar" Clicked="BtnRegresar_OnClicked"></Button>

            <Button Text="Generar BarCode" x:Name="generateBarCode" Clicked="GenerateBarCode_OnClicked" />

        </StackLayout>



        <controls:BarcodeGeneratorView
            WidthRequest="150"
            HeightRequest="150"
            Format="Code128"
            Value="{Binding OGenerateBarCodeModel.valueBarCode}"
            Margin="5"
        />


    </VerticalStackLayout>
</ContentPage>