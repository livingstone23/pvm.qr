<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PVM.Mobile.Pages.StudentsPage"
             Title="StudentsPage">
    <ScrollView>
        <VerticalStackLayout>

            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                Spacing="5">

                <Button Text="Regresar" x:Name="btnRegresar" Clicked="BtnRegresar_OnClicked"></Button>


            </StackLayout>

            <ListView
                x:Name="lstStudent"
                ItemsSource="{Binding oStudentModel.list}"
            >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FullName}"
                                  Detail="{Binding Email}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>