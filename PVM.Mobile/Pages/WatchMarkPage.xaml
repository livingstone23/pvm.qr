<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PVM.Mobile.Pages.WatchMarkPage"
             Title="Ver Marcaciones"
             >
    <VerticalStackLayout Margin="5">
        <CollectionView 
            ItemsSource="{Binding oAsistenciaModels.listag}"
			IsGrouped="True"
                        >
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{StaticResource Primary}">
                        <Label HorizontalTextAlignment="Center" Text="{Binding nombreGrupo}" TextColor="White" FontAttributes="Bold"/>
                    </Frame>
                </DataTemplate>

            </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Margin="10" FontSize="15" Text="{Binding HoraMarcacion, StringFormat='Marcación a las {0}'}"></Label>
                </DataTemplate>


            </CollectionView.ItemTemplate>

        </CollectionView>
        
    </VerticalStackLayout>
</ContentPage>